<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:background="@color/colorWhite"
             android:layout_height="match_parent"
             tools:context=".LoginSignupScreen">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <ImageView android:layout_width="match_parent"
                       android:layout_height="150dp"
                       app:srcCompat="@drawable/app_logo"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_regVw"
                    android:orientation="vertical"
            >
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="REGISTER"
                          android:gravity="center"
                          android:textSize="20dp"
                          android:layout_marginBottom="20dp"
                          android:textColor="@color/colorBlack"
                          android:textStyle="bold"
                />
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:id="@+id/txtInptLyt_regName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rectangle_rouded"
                        android:backgroundTint="@color/colorGrey"
                        android:hint="Name"
                        android:textColorHint="#E28F76"
                        app:boxStrokeColor="@color/colorWhite">

                    <EditText
                            android:id="@+id/et_regName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="14dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:id="@+id/txtInptLyt_regEmail"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rectangle_rouded"
                        android:backgroundTint="@color/colorGrey"
                        android:hint="Email "
                        android:textColorHint="#E28F76"
                        app:boxStrokeColor="@color/colorWhite">


                    <EditText
                            android:id="@+id/et_regEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"

                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="14dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:id="@+id/txtInptLyt_regPhone"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rectangle_rouded"
                        android:backgroundTint="@color/colorGrey"
                        android:hint="Mobile Number "
                        android:textColorHint="#E28F76"
                        app:boxStrokeColor="@color/colorWhite">


                    <EditText
                            android:id="@+id/et_regPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:paddingLeft="15dp"
                            android:maxLength="10"
                            android:paddingRight="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="14dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:id="@+id/txtInptLyt_regPsd"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rectangle_rouded"
                        android:backgroundTint="@color/colorGrey"
                        android:hint="Password"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/colorAccent"
                        android:textColorHint="#E28F76"
                        app:boxStrokeColor="@color/colorWhite">


                    <EditText
                            android:id="@+id/et_regPsd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                             android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="14dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                        android:id="@+id/tv_submitReg"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rectangle_rouded"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:hint="Submit"
                        android:textSize="22sp"
                        android:textColorHint="@color/colorWhite"
                        app:boxStrokeColor="@color/colorWhite"
                />
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center"
                              android:layout_marginTop="25dp">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:text="Already have an acocount?  "
                              android:gravity="center"
                              android:textSize="16dp"
                              android:textColor="@color/colorBlack"
                    />
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:id="@+id/tv_gotoLogin"
                              android:text="   Login Here"
                              android:gravity="center"
                              android:textSize="16dp"
                              android:textColor="@color/colorPrimary"
                    />


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:visibility="gone"
                    android:id="@+id/ll_loginVw"
                    android:orientation="vertical"
            >

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="LOGIN"
                          android:gravity="center"
                          android:textSize="20dp"
                          android:layout_marginBottom="20dp"
                          android:textColor="@color/colorBlack"
                          android:textStyle="bold"
                />
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:id="@+id/txtInptLyt_loginEmail"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rectangle_rouded"
                        android:backgroundTint="@color/colorGrey"
                        android:hint="Email"
                        android:textColorHint="#E28F76"
                        app:boxStrokeColor="@color/colorWhite">


                    <EditText
                            android:id="@+id/et_loginEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="14dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:id="@+id/txtInptLyt_loginPsd"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/rectangle_rouded"
                        android:backgroundTint="@color/colorGrey"
                        android:hint="Password"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/colorAccent"
                        android:textColorHint="#E28F76"
                        app:boxStrokeColor="@color/colorWhite">


                    <EditText
                            android:id="@+id/et_loginPsd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                             android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="14dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                        android:id="@+id/tv_submitLogin"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rectangle_rouded"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:hint="Submit"
                        android:textSize="22sp"
                        android:textColorHint="@color/colorWhite"
                        app:boxStrokeColor="@color/colorWhite"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:id="@+id/tv_forgetPsd"
                          android:text=" Forget Password ?   "
                          android:layout_gravity="right"
                          android:gravity="right"
                          android:layout_marginTop="10dp" android:textSize="16dp"
                          android:textColor="@color/colorPrimary"
                />
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center"
                              android:layout_marginTop="25dp">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:text="Don't have an acocount?  "
                              android:gravity="center"
                              android:textSize="16dp"
                              android:textColor="@color/colorBlack"
                    />
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:id="@+id/tv_gotoSignup"
                              android:text=" Sign Up"
                              android:gravity="center"
                              android:textSize="16dp"
                              android:textColor="@color/colorPrimary"
                    />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="30dp"
                          android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="50dp"
                              android:orientation="horizontal"
                              android:layout_weight="100"
                              android:background="@drawable/rectangle_rouded"
                              android:backgroundTint="#D44738"

                >
                    <ImageView android:layout_width="0dp"
                               android:padding="5dp"
                               android:layout_height="match_parent"
                               android:layout_weight="20"
                               app:srcCompat="@drawable/ic_gmail"
                    />
                    <TextView
                            android:id="@+id/tv_loginWithGmail"
                            android:layout_width="0dp"
                            android:layout_weight="80"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorWhite"
                            android:hint="Continue With Gmail "
                            android:textSize="22sp"
                            android:textColorHint="@color/colorWhite"
                            app:boxStrokeColor="@color/colorWhite"
                    />

                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:id="@+id/tv_loginWithFB"
                              android:layout_height="50dp"
                              android:orientation="horizontal"
                              android:layout_marginTop="10dp"
                              android:layout_weight="100"
                              android:background="@drawable/rectangle_rouded"
                              android:backgroundTint="#4267B2"

                >
                    <ImageView android:layout_width="0dp"
                               android:padding="5dp"
                               android:layout_height="match_parent"
                               android:layout_weight="20"
                               app:srcCompat="@drawable/ic_facebook"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="80"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorWhite"
                            android:hint="Continue With Facebook "
                            android:textSize="22sp"
                            android:textColorHint="@color/colorWhite"
                            app:boxStrokeColor="@color/colorWhite"
                    />

                </LinearLayout>


            </LinearLayout>

            <ImageView android:layout_width="match_parent"
                       android:layout_height="150dp"
            />
        </LinearLayout>

    </ScrollView>

</FrameLayout>